    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "./",
            }
        },
        {
            "name": "Generate chatbot",
            "type": "python",
            "request": "launch",
            "module": "data_generation.utils.generate_chatbot",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "./",
                "CHATBOT_ID": "text_input"
            }
        },
        {
            "name": "Install local dev repo",
            "type": "python",
            "request": "launch",
            "module": "pip",
            "args": [
                "install",
                "-U",
                "/Users/chosan/code/converso/rasa/rasa-library",
            ],
        },
        {
            "name": "Rasa: Train",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "train",
                "--domain=domain",
            ]
        },
        {
            "name": "Rasa: Train NLU",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "train",
                "nlu",
            ]
        },
        {
            "name": "Rasa: Action Server",
            "type": "python",
            "request": "launch",
            "module": "rasa_sdk",
            "args": [
                "--actions",
                "actions",
            ],
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "./",
            }
        },
        {
            "name": "Rasa: Test",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "test",
                "--domain=domain"
            ]
        },
        {
            "name": "Rasa: Test NLU (fast)",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "test",
                "nlu",
                "--domain=domain",
                "--nlu=tests/test_nlu.yml"
            ]
        },
        {
            "name": "Rasa: Test NLU",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "test",
                "nlu",
                "--nlu=data",
                "--domain=domain"
            ]
        },
        {
            "name": "Rasa: Test core",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "test",
                "core",
                "--stories",
                "tests/"
            ],
            "env": {
                "PYTHONPATH": "./"
            }
        },
        {
            "name": "Rasa: Shell",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "shell",
                "--debug",
                "-p=9999"
            ],
            "env": {
                "RASA_SHELL_STREAM_READING_TIMEOUT_IN_SECONDS": "-1",
                "PYTHONPATH": "./"
            }
        },
        {
            "name": "Rasa: Run",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "justMyCode": false,
            "args": [
                "run",
                "-p=8080",
                "-vv"
            ]
        },
        {
            "name": "Duckling: Start server",
            "request": "launch",
            "command": "docker run -p 1234:8000 rasa/duckling",
            "type": "node-terminal",
        },
        {
            "name": "Rasa X",
            "type": "python",
            "request": "launch",
            "module": "rasa",
            "args": [
                "x",
                "--domain",
                "domain"
            ]
        },
        {
            "name": "Cloud Build: Build base",
            "request": "launch",
            "command": "gcloud builds submit --config=docker/cloud-build.base.yaml",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Build: Build trained",
            "request": "launch",
            "command": "gcloud builds submit --config=docker/cloud-build.trained.yaml --substitutions _DUCKLING_HOST=${config:DUCKLING_HOST}",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Build: Build rasa-run",
            "request": "launch",
            "command": "gcloud builds submit --config=docker/cloud-build.trained.rasa-run.yaml",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Build: Build all",
            "request": "launch",
            "command": "gcloud builds submit --config=docker/cloud-build.base.yaml && gcloud builds submit --config=docker/cloud-build.trained.yaml --substitutions _DUCKLING_HOST=${config:DUCKLING_HOST} && gcloud builds submit --config=docker/cloud-build.trained.rasa-run.yaml",
            "type": "node-terminal",
        },
        {
            "name": "Cloud Run: Deploy rasa-run",
            "request": "launch",
            "command": "gcloud run deploy rasa-run --image=gcr.io/chatbot-299615/rasa-run --platform=managed --cpu=2 --memory=4G --port=8080 --region=us-central1 --update-env-vars DUCKLING_HOST=${config:DUCKLING_HOST},HAYSTACK_HOST=${config:HAYSTACK_HOST},QA_HOST=${config:QA_HOST},COREFERENCE_HOST=${config:COREFERENCE_HOST} --vpc-connector=${config:VPC_CONNECTOR}",
            "type": "node-terminal"
        },
        {
            "name": "Cloud Build: Push duckling to gcr.io",
            "request": "launch",
            "command": "docker tag rasa/duckling gcr.io/chatbot-299615/duckling && docker push gcr.io/chatbot-299615/duckling",
            "type": "node-terminal"
        },
        {
            "name": "Cloud Run: Deploy duckling",
            "request": "launch",
            "command": "gcloud run deploy duckling --image=gcr.io/chatbot-299615/duckling --platform=managed --cpu=2 --memory=4G --port=8000 --allow-unauthenticated",
            "type": "node-terminal"
        },
        {
            "name": "Show logs",
            "request": "launch",
            "command": "gcloud app logs tail -s default",
            "type": "node-terminal",
        },
        // {
        //     "name": "Docker: Pull container from cloud",
        //     "request": "launch",
        //     "command": "docker pull ${config:DOCKER_IMAGE_TAG}",
        //     "type": "node-terminal",
        // },
        // {
        //     "name": "Docker: Build container locally",
        //     "request": "launch",
        //     "command": "docker build -t ${config:DOCKER_CONTAINER_NAME} .",
        //     "type": "node-terminal",
        // },
        // {
        //     "name": "Docker: Run bash in container",
        //     "request": "launch",
        //     "command": "docker pull ${config:DOCKER_IMAGE_TAG} && docker run -it ${config:DOCKER_IMAGE_TAG} bash",
        //     "type": "node-terminal",
        // },
        {
            "name": "Docker: Run container locally",
            "request": "launch",
            "command": "docker pull gcr.io/chatbot-299615/rasa-run && PORT=8080 && docker run -p 5005:${PORT} -e PORT=${PORT} --env DUCKLING_HOST=${config:DUCKLING_HOST} --env HAYSTACK_HOST=${config:HAYSTACK_HOST} --env QA_HOST=${config:QA_HOST} --env COREFERENCE_HOST=${config:COREFERENCE_HOST} --memory=2g --cpus=2 gcr.io/chatbot-299615/rasa-run",
            "type": "node-terminal",
        }
    ]
}